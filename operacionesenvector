#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int numeros[100], n;
	int suma=0;
	int mult=1;

	cout<<"Digite el numero de elementos del arreglo: ";
	cin>>n;

	for (int i=0;i<n;i++){
		cout<<"Digite un valor: ";
		cin>>numeros[i];
	}

	for (int i=0;i<n;i++){
		cout<<i<<" -> "<<numeros[i]<<endl;
	}

	for (int i=0;i<n;i++){
		suma+=numeros[i];
		mult*=numeros[i];
	}

	cout<<"La suma de los elementos del vector es: "<< suma<<endl;
	cout<<"La mulitplicacion de los elementos del vector es: "<< mult;

	getch ();
}
